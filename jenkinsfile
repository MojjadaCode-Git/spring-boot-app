pipeline {
    agent any

    environment {
        DOCKER_HUB = "saixdocker"
        IMAGE_NAME = "spring-boot-app"
        VERSION = "1.0.${BUILD_NUMBER}"
        GIT_REPO_MANIFEST = "https://github.com/MojjadaCode-Git/spring-boot-manifests.git"
        GIT_BRANCH = "main"
        SONAR_URL = "http://18.207.152.200:9000"
    }

    tools {
        maven 'Maven3'
        jdk 'jdk8'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/MojjadaCode-Git/spring-boot-app.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh '''
                    mvn clean verify sonar:sonar \
                      -Dsonar.projectKey=spring-boot-app \
                      -Dsonar.host.url=http://18.207.152.200:9000 \
                      -Dsonar.login=admin \
                      -Dsonar.password=Virat@2025!
                    '''
                }
            }
        }

        stage('Build JAR') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_HUB}/${IMAGE_NAME}:${VERSION} ."
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-cred', usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    sh "echo $PASS | docker login -u $USER --password-stdin"
                    sh "docker push ${DOCKER_HUB}/${IMAGE_NAME}:${VERSION}"
                }
            }
        }

        stage('Update Manifest Repo') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'github-token', usernameVariable: 'GITHUB_USER', passwordVariable: 'GITHUB_TOKEN')]) {
                    sh '''
                    git clone ${GIT_REPO_MANIFEST} manifests
                    cd manifests
                    sed -i "s#saixdocker/spring-boot-app:.*#saixdocker/spring-boot-app:${VERSION}#g" deployment.yaml
                    git config user.email "jenkins@example.com"
                    git config user.name "Jenkins"
                    git add deployment.yaml
                    git commit -m "Updated image tag to ${VERSION}"
                    git push https://${GITHUB_USER}:${GITHUB_TOKEN}@github.com/MojjadaCode-Git/spring-boot-manifests.git main
                    '''
                }
            }
        }

        stage('Post Build') {
            steps {
                echo "âœ… Build completed successfully!"
                echo "Docker Image: ${DOCKER_HUB}/${IMAGE_NAME}:${VERSION}"
            }
        }
    }
}
